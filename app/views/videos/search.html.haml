.fluid-container.main-container
  .container
    .row
      .col-sm-12.page-title
        %h1
      .col-sm-12
        %ol.breadcrumb
          %li
            = link_to 'Home', root_path
          %li.active Novels
    .row
      .col-sm-4.col-sm-offset-8.list-filter.text-center
        .filter_tabs
          = render 'filter_tabs'
    .row
      = render 'search_side_bar'
      .col-md-9
        - if @novels.any?
          .novels_part
            = render 'novels'
        - else
          .card
            %h4 No novels found
