.fluid-container.main-container
  .container
    .row
      .col-sm-12.page-title
        %h1
      .col-sm-12
        %ol.breadcrumb
          %li
            = link_to 'Home', root_path
          %li
            = link_to @video.title, video_path(@video)
          - if @video_track.parent.present?
            %li
              = link_to @video_track.parent.title, video_video_track_path(@video, @video_track.parent)
            %li.active=  "Edit video_track #{@video_track.parent.track_no + 1}"
          - else
            %li.active Edit video_track 1
    .row
      .col-sm-8.col-sm-offset-2
        = render 'form'
