.fluid-container.main-container
  .container
    .row
      .col-sm-12.page-title
        %h1 Novels
      .col-sm-12
        %ol.breadcrumb
          %li
            = link_to 'Home', root_path
          %li.active Novels
    .row
      = link_to new_novel_path, class: 'btn green' do
        Add New Novel
        %i.fa.fa-plus
    - if @novels.any?
      = render 'novels'
    - else
      %h4 No novels created yet
