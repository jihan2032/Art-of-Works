.fluid-container.main-container
  .container
    .row
      .col-sm-12.page-title
        %h1 Log In
      .col-sm-12
        %ol.breadcrumb
          %li
            %a{:href => "#"} Home
          %li.active Log In
    .row
      .col-sm-6.col-sm-offset-3
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'main-content signup-form' })do |f|
          %legend Log In
          .form-group
            = f.label :email, "Email address"
            = f.email_field :email, autofocus: true, required: true, placeholder: 'Email', class: 'form-control'
          .form-group
            = f.label :password, "Password"
            = f.password_field :password, autofocus: true, required: true, placeholder: 'Password', class: 'form-control'
          .actions
            = f.submit "Log In", class: 'btn btn-primary'

