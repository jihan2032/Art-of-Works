.fluid-container.main-container
  .container
    .row
      .col-sm-12.page-title
        %h1 Join Us
      .col-sm-12
        %ol.breadcrumb
          %li
            %a{:href => "#"} Home
          %li.active Sign Up
    .row
      .col-sm-6.col-sm-offset-3
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'main-content signup-form' }) do |f|
          = error_messages_for(resource)
          %legend Sign up
          .form-group
            = f.label :user_name, "Display Name"
            = f.text_field :user_name, autofocus: true, required: true, placeholder: 'Display Name', class: 'form-control'
            %p.help-block The name that other memebers will see.
          .form-group
            = f.label :email, "Email address"
            = f.email_field :email, autofocus: true, required: true, placeholder: 'Email', class: 'form-control'
          .form-group
            = f.label :password
            = f.password_field :password, autofocus: true, required: true, placeholder: 'Password', class: 'form-control'
            %p.help-block Password length should be greater than 8 characters long.
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autofocus: true, required: true, placeholder: 'Password Confirmation', class: 'form-control'
          .checkbox
            %label
              %input{:type => "checkbox"}/
              I agree to sell my soul to access this service.
          .actions
            = f.submit "Create Account", class: 'btn btn-primary'
